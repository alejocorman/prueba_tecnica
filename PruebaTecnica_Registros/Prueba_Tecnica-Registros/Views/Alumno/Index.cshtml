@Model List<RegistroSeccion.Models.Alumno>
@{
    ViewData("Title") = "Alumno"
    Layout = "~/Views/Shared/_Layout.cshtml";
End Code
}

</br >
<h4>Registro de Alumnos</h4>
<class="alert alert-@ViewBag.alerta"> - - <b>@ViewBag.res</b> - - </div>
<form action="/Alumno/Index" method="post">
    <table>
        <tr>
            <td style="padding: 10px">Codigo:</td>
            <td style="padding: 10px"><input class="form-control" maxlength="8" type="text" name="Codigo" id="Codigo" required></td>
        </tr>
        <tr>
            <td style="padding: 10px">Nombre:</td>
            <td style="padding: 10px"><input class="form-control" maxlength="8" type="text" name="nom" id="nom" required></td>
        </tr>
        <tr>
            <td style="padding: 10px">Apellidos:</td>
            <td style="padding: 10px"><input class="form-control" maxlength="8" type="text" name="ape" id="ape" required></td>
        </tr>
        <tr>
            <td style="padding: 10px">Apellidos:</td>
            <td style="padding: 10px">
                <button class="btn btn-success" type="submit" name="btn1" id="btn1"><span class="glyphicon glyphicon-save">Agregar</span></button>
                <button class="btn btn-primary" type="reset" name="btn2" id="btn2"><span class="glyphicon glyphicon-remove">Actualizar</span></button>
                <a class="btn btn-danger" href="~/Seccion/Index" ><span class="glyphicon glyphicon-backward">Regresar</span></a>
            </td>
        </tr>
    </table>
</form>
</br >
</br >

<table id="MODULO_ALUMNO" class="table table-bordered">
    <thead style="background-color: black; color: white">
        <tr>
            <th>Codigo:</th>
            <th>Nombres:</th>
            <th>Apellidos:</th>
            <th>Cedula:</th>
            <th style="text-align: center">Mantenimiento:</th>
            <td style="padding: 10px"><input class="form-control" maxlength="8" type="text" name="ape" id="ape" required></td>
        </tr>
    </thead>
    <tbody style="background-color: white">
        @foreach (var f in Model)
        {
        <tr>
            <td>@f.id_alu</td>
            <td>@f.nombre_alu</td>
            <td>@f.apellidos_alu</td>
            <td>@f.cedula_alu</td>
            <td style="text-align: center">
                <button class="btn btn-warning" type="button" name="btn1" id="btn_act" onclick="location.href='../Alumno/Actualizar?=@f.id_alu'"><span class="glyphicon glyphicon-edit">Actualizar</span></button>
                <button class="btn btn-warning" type="button" name="btn1" id="btn_act" onclick="location.href='../Alumno/Eliminar?=@f.id_alu'"><span class="glyphicon glyphicon-edit">Eliminar</span></button>

            </td>
        </tr>
        }
    </tbody>
</table>


<header></header>


